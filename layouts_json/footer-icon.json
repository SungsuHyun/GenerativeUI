{
  "name": "Contextual Footer Icon",
  "layout": "footer",
  "description": "Appears in the bottom area of a response to suggest a relevant follow-up to the main content.",
  "contents_type": "bottom",
  "parameters": {
    "text": {
      "description": "A short text label (max 2 words) that accompanies the icon in the footer.",
      "type": "string",
      "max_words": 2,
      "example": "Pasta cook guide"
    },
    "icon": {
      "description": "A single action icon that suggests a relevant next step for the user.",
      "type": "string",
      "max": 1,
      "enum": [
        "add",
        "arrow",
        "bookmark",
        "call",
        "download",
        "link",
        "message",
        "noti",
        "play",
        "search",
        "share",
        "tips"
      ],
      "example": "add"
    }
  },
  "file": "footer-icon.html",
  "sample": {
    "text": "Pasta cook guide",
    "icon": "add"
  },
  "html": "<div class=\"footer\"><div class=\"footer--left\"><p v-if=\"data.text\" class=\"footer--title\">{{ data.text }}</p></div><div class=\"footer--right\" :class=\"data.img ? 'img' : 'icon' \"><template v-if=\"data.img\"><p class=\"footer--img\" v-for=\"item in data.img\" :class=\"{more: data.img.length > 1}\"><img :src=\"item\" alt=\"img\" class=\"img\"></p></template><template v-if=\"data.icon\"><p class=\"footer--img\"><img :src=\"'../assets/image/footer-icon/' + data.icon + '.svg'\" alt=\"img\" class=\"img\"></p></template></div></div>"
}