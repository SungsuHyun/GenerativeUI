{
  "name": "Titled Thumbnail Collection",
  "layout": "info_14",
  "description": "Displays a group of representative thumbnails (e.g., photos, profile pictures) under a single title to represent a collection, event, or album. It is used to visually summarize a group of related items.",
  "contents_type": "middle",
  "examples": [
    "Create a collection of the best photos from my Busan trip.",
    "Show only the photos of Euna from last week's trip.",
    "Show me my appointment for this weekend."
  ],
  "parameters": {
    "component_title": {
      "description": "A date or period associated with the collection (e.g., 'Last Weekend', 'October 2023').",
      "type": "string",
      "example": "Sep 11-14, 2025"
    },
    "text_heading": {
      "description": "The main title for the collection of thumbnails (e.g., 'Busan Trip Highlights', 'Marketing Team Sync').",
      "type": "string",
      "example": "Best Shots in Busan"
    },
    "thumbnail_list": {
      "description": "An array of image paths for the representative thumbnails (e.g., photos or profile pictures). The layout typically displays a stack of up to 3 thumbnails, with an indicator for additional items.",
      "type": "array",
      "data": {
        "thumbnail_img": {
          "tool_type": "img_search",
          "description": "The path to an individual image in the group.",
