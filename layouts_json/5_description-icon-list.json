{
  "name": "Description + Icon list",
  "layout": "5",
  "description": "동일한 유형의 정보를 여러개 나열할 때 (리스트 사용 시)\n리스트 항목마다 타입/상태/분류 등을 아이콘으로 구분해야할 때",
  "contents_type": "middle",
  "parameters": {
    "title": {
      "description": "정보를 요약한 내용",
      "type": "string",
      "example": "5번"
    },
    "text_description": {
      "description": "전체 내용을 요약하거나, 아래 리스트 내용을 뽑은 이유 ",
      "type": "string",
      "example": "Lorem ipsum dolor sit amet consectetur. Eget pellentesque nec consectetur tempus turpis ultrices."
    },
    "icon_list": {
      "description": "list에 추가될 항목",
      "type": "array",
      "data": {
        "icon": {
          "description": "icon path",
          "type": "string"
        },
        "list_subject": {
          "type": "string"
        },
        "list_content": {
          "type": "string"
        }
      },
      "example": [
        {
          "icon": "../assets/image/icon/app-icon.svg",
          "list_subject": "subject 1",
          "list_content": "content 1"
        },
        {
          "icon": "../assets/image/icon/app-icon.svg",
          "list_subject": "subject 2",
          "list_content": "content 2"
        },
        {
          "icon": "../assets/image/icon/app-icon.svg",
          "list_subject": "subject 3",
          "list_content": "content 3"
        }
      ]
    }
  },
  "file": "5_description-icon-list.html",
  "sample": {
    "title": "5번",
    "text_description": "Lorem ipsum dolor sit amet consectetur. Eget pellentesque nec consectetur tempus turpis ultrices.",
    "icon_list": [
      {
        "icon": "../assets/image/icon/app-icon.svg",
        "list_subject": "subject 1",
        "list_content": "content 1"
      },
      {
        "icon": "../assets/image/icon/app-icon.svg",
        "list_subject": "subject 2",
        "list_content": "content 2"
      },
      {
        "icon": "../assets/image/icon/app-icon.svg",
        "list_subject": "subject 3",
        "list_content": "content 3"
      }
    ]
  },
  "html": "<div class=\"widget\"><p class=\"widget--title\">{{ data.title }}</p><p class=\"widget--desc\" v-html=\"data.text_description\"></p><div class=\"widget--list\"><div class=\"widget--list__box is--icon\" v-for=\"item in data.icon_list\"><div class=\"icon\"><img v-bind:src=\"item.icon\" alt=\"IC icon\"></div><div class=\"widget--list__text\"><p class=\"title\">{{ item.list_subject }}</p><p class=\"text text--blue\">{{ item.list_content }}</p></div></div></div></div>"
}